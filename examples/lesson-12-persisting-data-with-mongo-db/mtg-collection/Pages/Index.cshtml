@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="d-flex">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="SearchModel.Name" />
        </div>
    </div>
    <div class="d-flex">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Type</label>
            <input type="text" class="form-control" asp-for="SearchModel.Type" />
        </div>
    </div>
    <button type="submit"class="btn btn-primary">Search</button>
</form>

@foreach(var c in Model.Cards) {
    <div class="d-flex">
        <div class="me-4">
            <img src="@c.ImageUris?.Small" alt="@c.Name" />
            <p>@c.Artist</p>
        </div>
        <div>
            <h4>@c.Name</h4>
            <div>
                <span class="d-block">@c.ManaCost</span>
                <small>@c.Type</small>
            </div>
            <p>@c.OracleText</p>
            <div class="d-flex">
                <small>@c.Set — @c.Rarity</small>
            </div>
        </div>
    </div>
}
